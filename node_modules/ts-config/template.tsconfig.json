{
	"include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions":{
        "alwaysStrict":true,
        "allowSyntheticDefaultImports":true,
        "declaration":true,
    	"emitDecoratorMetadata":true,
        "experimentalDecorators":true,
        "inlineSourceMap":true,
        "lib":["ESNext"],
        "listEmittedFiles":true,
        "module": "commonjs",
        "moduleResolution":"Node",
        "outDir":"build",
        "pretty":true,
        "target":"ES2016"
    }
}